const { sideBarActiveItemID } = Astro.props;
const activeClass = "bg-base-300"; // For primary color replace with `active` class
---

<div class="navbar bg-base-200 sticky top-0 z-30 shadow-sm">
  <!-- Mobile menu button and logo -->
  <div class="navbar-start">
    <div class="dropdown">
      <label tabindex="0" class="btn btn-ghost lg:hidden">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </label>
      <!-- Mobile menu dropdown -->
      <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-200 rounded-box w-52">
        <li><a class="text-base" id="home-mobile" href="/">Home</a></li>
        <li><a class="text-base" id="projects-mobile" href="/projects">Projects</a></li>
        <li><a class="text-base" id="about-mobile" href="/about">About</a></li>
        <li>
          <a
            class="text-base slo-bg-animated"
            href="mailto:sloraris@sloraris.dev"
            target="_blank"
            referrerpolicy="no-referrer-when-downgrade"
          >Contact</a>
        </li>
      </ul>
    </div>
    <a href="/" class="btn btn-ghost">
      <img src="/logos-dark/[sloraris]-dark-mode.svg" alt="sloraris.dev" class="h-10">
    </a>
  </div>

  <!-- Desktop menu -->
  <div class="navbar-center hidden lg:flex">
    <ul class="menu menu-horizontal px-1">
