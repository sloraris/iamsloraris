---
import BaseLayout from "../layouts/BaseLayout.astro";
import CVEvents from "../components/cv/events.astro";
import SkillBar from "../components/skill/SkillBar.astro";
import SkillScale from "../components/skill/SkillScale.astro";
import { skills } from "../components/skill/skills.ts";
---

<BaseLayout title="About" sideBarActiveItemID="about">

    <div class="mockup-window border mb-10 bg-base-300">
        <div class="bg-base-200 p-6">
            <h1 class="font-bold mb-4">About Me</h1>
            <div class="grid grid-cols-1 gap-y-4 md:grid-cols-3 md:gap-4">
                <div class="avatar col-span-1 w-full">
                    <div class="rounded-xl">
                        <img src="/images/parker-owings.jpeg" />
                    </div>
                </div>
                <div role="tablist" class="col-span-2 tabs tabs-lifted tabs-lg h-full">
                    <!-- Bio Tab -->
                    <input type="radio" name="About Me" role="tab" class="tab" aria-label="Bio" checked />
                    <div role="tabpanel" class="tab-content bg-base-100 rounded-box min-h-[300px]">
                        <h2 class="text-3xl"><span class="text-accent font-bold">Parker Owings</span> aka <span class="text-primary font-bold">sloraris</span>
                        </h2>
                        <p>
                            I would describe myself as a man of many interests&mdash;some interesting, some not. I ride a onewheel, I enjoy Ultimate Frisbee, I play with Docker and Linux in my spare time, I find cable-management relaxing, and I'm a casual enjoyer of the occasional video game. I have a passion for networking, automation, cybersecurity, and I'm a firm believer in the philosophy that you should always be learning (mostly by doing).
                        </p>
                    </div>

                    <!-- Acknowledgments Tab -->
                    <input type="radio" name="About Me" role="tab" class="tab" aria-label="Acknowledgments" />
                    <div role="tabpanel" class="tab-content bg-base-100 rounded-box min-h-[300px]">
                        <h2 class="text-3xl font-bold text-primary">Standing on the Shoulders of Giants</h2>
                        <p>
                            There's simply no way around it: I would not be where I am today without the help of some incredible people.
                        </p>
                        <ul class="list-disc list-inside">
                            <li>
                                <strong>My Parents</strong>
                                &ndash; For showing me that there's always another way to do something
                            </li>
                            <li>
                                <strong>My Professors</strong>
                                &ndash; For teaching me how to apply my skills towards real-world problems
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-3 collapse collapse-plus bg-base-200">
        <input type="checkbox" />
        <h2 class="collapse-title text-3xl font-bold">Skills</h2>
        <div class="collapse-content">
          <p class="rounded-xl bg-base-100 mb-4 p-3">
            These skills are self-rated on a scale of 0-4. A score of 0 means I've heard of it and can tell you about it but haven't spent any time with it, while a score of 4 means I use it consistently and would feel comfortable recommending it to others or teaching them how to use it.
          </p>
          <div class="flex">
            <SkillScale />
          </div>
          <div class="space-y-4">
            {skills.map(skill => (
              <div class="flex items-center">
                <SkillBar name={skill.name} icon={skill.icon} level={skill.level} />
              </div>
            ))}
          </div>
        </div>
      </div>

      <div class="mb-3 collapse collapse-plus bg-base-200">
        <input type="checkbox" />
        <h2 class="collapse-title text-3xl font-bold">Certifications</h2>
        <div class="collapse-content">
          <div class="rounded-xl bg-base-100 p-3">
            <h3 class="text-2xl font-bold">Certified</h3>
            <ul class="list-disc mx-6 mb-4 grid gap-2">
              <li>
                <a href="#" target="_blank"> Part 107 (Remote Pilot)</a>
              </li>
            </ul>
            <h3 class="text-2xl font-bold">Studying</h3>
            <ul class="list-disc mx-6 mb-4 grid gap-2">
              <li>
                <a href="#" target="_blank"> CCNA (Currently studying for the first exam)</a>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <hr class="slo-hr" />

      <div class="mb-5">
        <h2 class="text-3xl text-center w-full font-bold">Timeline</h2>
      </div>
      <div class="timeline timeline-vertical hidden md:block mb-10">
        <CVEvents />
      </div>
      <div class="timeline timeline-vertical timeline-compact block md:hidden mb-10">
        <CVEvents />
      </div>

</BaseLayout>
